<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="IE=8">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="@Url.Content("~/Content/favicon.ico")" rel='shortcut icon' type='image/jpg' />

    @System.Web.Optimization.Styles.Render("~/css/app")


    @*@System.Web.Optimization.Scripts.Render("~/js/jquery")*@

    
    @RenderSection("CSS", required: false)


    @RenderSection("ScriptsHeader", required: false)

</head>
<body>
    <div class="body">
        <div>
            <ul class="headerButtons">
                <li><a href="/Home/">Home</a></li>
                <li><a href="/Home/DemoForm">Demo Form</a></li>
                <li><a href="/Home/DemoGrid">Demo Grid (jQGrid)</a></li>
                <li><a href="/Home/DemoCheckBoxList">Demo CheckBox List</a></li>
            </ul>
        </div>
        <div class="container">
            @RenderBody()
        </div>
    </div>
    
    
    @RenderSection("Scripts", required: false)
</body>
</html>